<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 影 -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="300dp" android:height="300dp" />
            <solid android:color="#66404040" />
        </shape>
    </item>
    <!-- 枠 -->
    <item
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <size android:height="300dp" android:width="300dp" />
            <solid android:color="#ffFFFFFF" />
        </shape>
    </item>

</layer-list>